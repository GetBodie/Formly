FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source (will be overwritten by volume mount)
COPY . .

EXPOSE 3010

# Start Vite dev server with host binding and port for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3010"]
